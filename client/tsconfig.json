{
  /* Visit https://aka.ms/tsconfig to read more about this file */
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "build",
    "lib": ["dom", "esnext"],
    "target": "es5",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "jsx": "react-jsx",
    "baseUrl": "./src",
    "paths": {
      "@components/*": ["components/*"],
      "@config/*": ["config/*"],
      "@enums/*": ["enums/*"],
      "@hooks/*": ["hooks/*"],
      "@layouts/*": ["layouts/*"],
      "@lib/*": ["lib/*"],
      "@lists/*": ["lists/*"],
      "@models/*": ["models/*"],
      "@pages/*": ["pages/*"],
      "@store/*": ["store/*"],
      "@styles/*": ["styles/*"],
      "@services/*": ["services/*"]
    }
  },
  "exclude": ["node_modules", "build", "coverage", "webpack.*.js", "*.config.js", "*.test.ts*"],
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  }
}
